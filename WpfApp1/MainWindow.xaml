        <Button Content="7" Grid.Row="1" Grid.Column="6" Background="LightGreen" HorizontalContentAlignment="Right" VerticalContentAlignment="Top"/>
        <Button Content="8" Grid.Row="2" Grid.Column="0" Background="WhiteSmoke" HorizontalContentAlignment="Right" VerticalContentAlignment="Top"/>
        <Button Content="9" Grid.Row="2" Grid.Column="1" Background="WhiteSmoke" HorizontalContentAlignment="Right" VerticalContentAlignment="Top"/>
        <Button Content="10" Grid.Row="2" Grid.Column="2" Background="WhiteSmoke" HorizontalContentAlignment="Right" VerticalContentAlignment="Top"/>
        <Button Content="11" Grid.Row="2" Grid.Column="3" Background="WhiteSmoke" HorizontalContentAlignment="Right" VerticalContentAlignment="Top"/>
        <Button Content="12" Grid.Row="2" Grid.Column="4" Background="WhiteSmoke" HorizontalContentAlignment="Right" VerticalContentAlignment="Top"/>
        <Button Content="13" Grid.Row="2" Grid.Column="5" Background="WhiteSmoke" HorizontalContentAlignment="Right" VerticalContentAlignment="Top"/>
        <Button Content="14" Grid.Row="2" Grid.Column="6" Background="WhiteSmoke" HorizontalContentAlignment="Right" VerticalContentAlignment="Top"/>
        <Button Content="15" Grid.Row="3" Grid.Column="0" Background="LightGreen" HorizontalContentAlignment="Right" VerticalContentAlignment="Top"/>
        <Button Content="16" Grid.Row="3" Grid.Column="1" Background="LightGreen" HorizontalContentAlignment="Right" VerticalContentAlignment="Top"/>
        <Button Content="17" Grid.Row="3" Grid.Column="2" Background="LightGreen" HorizontalContentAlignment="Right" VerticalContentAlignment="Top"/>
        <Button Content="18" Grid.Row="3" Grid.Column="3" Background="LightGreen" HorizontalContentAlignment="Right" VerticalContentAlignment="Top"/>
        <Button Content="19" Grid.Row="3" Grid.Column="4" Background="LightGreen" HorizontalContentAlignment="Right" VerticalContentAlignment="Top"/>
        <Button Content="20" Grid.Row="3" Grid.Column="5" Background="LightGreen" HorizontalContentAlignment="Right" VerticalContentAlignment="Top"/>
        <Button Content="21" Grid.Row="3" Grid.Column="6" Background="LightGreen" HorizontalContentAlignment="Right" VerticalContentAlignment="Top"/>
        <Button Content="22" Grid.Row="4" Grid.Column="0" Background="WhiteSmoke" HorizontalContentAlignment="Right" VerticalContentAlignment="Top"/>
        <Button Content="23" Grid.Row="4" Grid.Column="1" Background="WhiteSmoke" HorizontalContentAlignment="Right" VerticalContentAlignment="Top"/>
        <Button Content="24" Grid.Row="4" Grid.Column="2" Background="WhiteSmoke" HorizontalContentAlignment="Right" VerticalContentAlignment="Top"/>
        <Button Content="25" Grid.Row="4" Grid.Column="3" Background="WhiteSmoke" HorizontalContentAlignment="Right" VerticalContentAlignment="Top"/>
        <Button Content="26" Grid.Row="4" Grid.Column="4" Background="WhiteSmoke" HorizontalContentAlignment="Right" VerticalContentAlignment="Top"/>
